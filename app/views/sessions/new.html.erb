  <html>
  <div class="container">
    <br>
    <h1>Hey! Il faut se connecter pour malverser !  </h1>
    <br>
  </div>
  <div class="container">
    <%= form_tag url_for(action: 'create'), method: "post", class: "form-horizontal" do %>
      <div class="form-group">
        <%= label_tag "Ton email" %>
        <div class="col-sm-10">
          <%= text_area_tag 'email', "", class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <%= label_tag "Ton mot de passe" %>
        <div class="col-sm-10">
          <%= text_area_tag 'password', "", class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= submit_tag "Te logger", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</html>
